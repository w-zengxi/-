/* search.wxss */
.input-box{
  flex-shrink: 0;
  flex-grow: 0;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
  background: #3877ff;
  font-size: 28rpx;
}
.keyword-box{
  display: -webkit-flex;
  align-items: center;
}
.keyword-input{
  flex-grow: 1;
  padding: 0 12px;
  border-radius: 10rpx;
  height: 68rpx;
  background: #f0f0f0;
}
.keyword-button{
  flex-grow: 0;
  margin-left: 20rpx;
  color: #fff;
  text-align: center;
}
.suggest{
  overflow: hidden;
  flex-grow: 1;
  height: 100%;
  padding: 0 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.flex{
  overflow: hidden;
  display: -webkit-flex;
}
